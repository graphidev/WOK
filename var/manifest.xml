<?xml version="1.0" encoding="utf-8"?>
<manifest>
    
    <!-- Use the following structure -->
    <!-- 
        request
            - domain (optional) : The domain access (~ corresponds to the default domain)
            - uri (required) : the URI access, add a colon before parameters
            - methods (default=ANY) : accepted request methods (REST)
            - action (required) : string for the action that should be called (null by default; controller:action or static)
            - languages (default=ANY) : authorized languages
            - types (default=ANY) : request types (ANY, HTTP, XHR/AJAX, CLI) 

            param (optional, recommended for URI parameters)
                - name (required) : just the param name
                - regexp (optional) : value's regexp or type (e.g: 'string', 'integer', 'any' or a custom regexp)
                - type (optional) : predefined parameter type (URI, GET, POST, FILE; default: URI)
                - value (optional) : parameter's value (as tag param content)

            /!\ URI Parameters must be in the same order than in the request 'uri' attribute 
            
            For the following parameters, please report to the 'param' definition for undefined attributes' definition.

            token (optional)
                - name (required)
                - mode (required) : transmission mode (GET/POST)
                - time (optional) : tokens lifetime
            
            cookie (optional)
                - name (required)
                - regexp (optional)
                - crypted (optional) : boolean (true, yes, on, 1 / false, no, off, 0)
                - value (optional)

            session (optional)
                - name (required)
                - regexp (optional)
                - value (optional)
    -->

    <request domain="~" uri="" methods="ANY" languages="ANY" type="ANY" action="">
        <param type="URI">value</param>
        <cookie name="" regexp="" crypted="true"></cookie>
        <token name="" time=""></token>
        <session name="">value</session>
    </request>
    
</manifest>
