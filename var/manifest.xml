<?xml version="1.0" encoding="utf-8"?>
<manifest>
    
    <!--
        ** Notes about this manifest file **
        /!\ It is supposed that this file content is XML valid.
        Please use the following syntax to complete this file :

        * route
            - domain (optional) : The domain access (~ corresponds to the default domain)
            - methods (optional; default=any) : accepted request methods (REST) separated with a pipe
            - uri (required) : the URI access, add a colon before parameters name
            - action (required) :  string for the action that should be called (controller:action)
            - filter (optional) : name of the filter that will check more details about the request
            
            * param 
                - name (required) : The parameter's name
                - regexp (required) : The parameter's pattern

        * pattern
            - name (required) : The parameter's name
            - regexp (required) : The parameter's pattern
    -->
    
    <route uri="/cms" action="CMS:index" />
    <route uri="/cms/:page(\.:extension)?" action="CMS:page">
        <param name="page" regexp="[a-z0-9_/-]+" />
        <param name="extension" regexp="md|text" />
    </route>
    
    <route uri="/:locale/:test/dev" action="Development:index" filter="locale">
        <param name="test" regexp="[\w]+" />
    </route>
    
    <!-- Default homepage route -->
    <route uri="/" action="Root:index" />
    
    <!-- Do you want some tea ? -->
    <route uri="/teapot" action="Root:teapot" />
    
    <!-- Static pages route -->
    <route domain="~" uri="/:page" action="Root:page">
        <param name="page" regexp="[a-z0-9_-]+" />
    </route>
    
    <!-- Global patterns -->
    <pattern name="locale" regexp="[a-z]{2,3}_[A-Z]{2,3}" />
    <pattern name="id" regexp="[\d]+" />
     
</manifest>
