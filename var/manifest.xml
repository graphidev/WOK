<?xml version="1.0" encoding="utf-8"?>
<manifest>
    
    <!-- Use the following structure -->
    <!-- 
        request
            - domain (optional) : The domain access (~ corresponds to the default domain)
            - uri (required) : the URI access, add a colon before parameters
            - methods (default=ANY) : accepted request methods (REST)
            - action (required) : string for the action that should be called (null by default; controller:action or static)
            - languages (default=ANY) : authorized languages

            param (optional, recommended for URI parameters)
                - name (required) : just the param name
                - regexp (optional) : how full value should be ('string', 'integer', 'any' or a custom regexp)
                - type (optional) : predefined parameter type (URI, GET, POST, FILE; default: URI)

            /!\ URI Parameters must be in the same order than in the request 'uri' attribute
    
    -->
    
    <request uri="email-attachment" action="static"></request>
    
    <request uri="test/:var/:id/:another" action="Test:page">
        <param name="var" regexp="string" />
        <param name="id" regexp="integer" />
        <param name="another" regexp="any" />
        
        <!-- non URI parameters -->
        <param name="try" type="get" regexp="any" />
        <!--
        <param name="test" type="post" regexp="string" />
        <param name="file" type="file" />
        -->
    </request>
    
    <request uri="test-controller" action="test:form">
        <param name="data" type="post" regexp="array" />
    </request>
    
    <request uri="test-controller" action="test:action"></request>
    
    <request uri="static-page" action="static"></request>
    
    <request uri="all-options" action="static" domain="~" languages="any" methods="get"></request>
    
</manifest>
